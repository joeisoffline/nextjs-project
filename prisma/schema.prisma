generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String?
  email     String?    @unique
  customers Customer[]
}

model Customer {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  createdAt  DateTime @default(now())
  ownerId    String
  owner      User     @relation(fields: [ownerId], references: [id])
}