// === prisma/schema.prisma ===
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  name      String?
  email     String?    @unique
  customers Customer[]
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
}
